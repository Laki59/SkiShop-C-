@model List<OrderItem>

<h2>Checkout</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Ski</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ski.Name</td>
                    <td>@item.Quantity</td>
                    <td>$@item.Price</td>
                    <td>$@(item.Quantity * item.Price)</td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="Checkout" method="post">
        <button type="submit" class="btn btn-success">Confirm Order</button>
    </form>
}
