@model List<salalal.Models.User>

<div class="container mt-4">
    <h2 class="text-center mb-4">Manage Users</h2>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.Role</td>
                    <td>
                        @if (user.Role != "Admin")
                        {
                            <a class="btn btn-warning btn-sm" href="@Url.Action("EditUser", "Admin", new { id = user.Id })">Edit</a>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("DeleteUser", "Admin", new { id = user.Id })"
                               onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                        }
                        else
                        {
                            <span class="text-muted">Admin (Cannot edit/delete)</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
